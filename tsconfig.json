{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2022",
    "outDir": "./dist2",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",

    /* Linting */
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
